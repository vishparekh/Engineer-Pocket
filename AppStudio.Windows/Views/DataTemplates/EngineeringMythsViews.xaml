<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AppStudio.Controls"
    xmlns:html2xaml="using:AppStudio.Controls.Html2Xaml"
    xmlns:commands="using:AppStudio.Commands">

    <!-- HtmlList -->
    <DataTemplate x:Key="EngineeringMythsList">
        <controls:WebControl Html="{Binding Items[0].Content}" Width="640" Foreground="{StaticResource AppForegroundColor}" />
    </DataTemplate>

    <DataTemplate x:Key="EngineeringMythsListSnapped">
        <controls:WebControl Html="{Binding Items[0].Content}" Width="300" Height="340" Foreground="{StaticResource AppForegroundColor}" />
    </DataTemplate>

    <!-- HtmlItem -->
    <DataTemplate x:Key="EngineeringMythsItem">
        <controls:WebControl Html="{Binding Content}" Width="640" Foreground="{StaticResource AppForegroundColor}" />
    </DataTemplate>
        
    <DataTemplate x:Key="EngineeringMythsItemSnapped">
        <controls:WebControl Html="{Binding Content}" Width="220" Foreground="{StaticResource AppForegroundColor}" />
    </DataTemplate>
        

</ResourceDictionary>
